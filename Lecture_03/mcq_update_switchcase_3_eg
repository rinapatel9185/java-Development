package Dec;

import java.util.Scanner;

public class Switchcase {
	
	public static void main(String [] args) {
		
		Scanner sc=new Scanner(System.in);
		
		System.out.println("1. Which of the following is NOT an anti-virus software ?\r\n"+ //
				"a)Avast \r\n"+//
				"b)Kaspersk \r\n"+//
		        "c)Norton \r\n" + //
		         "d)linux\n");
        
		char option = sc.next().charAt(0);
		switch(option) {
		
		case 'a': System.out.println("Wrong Answer");
		break;
		case 'b': System.out.println("Wrong Answer");
		break;
		case 'c': System.out.println("Wrong Answer");
		break;
		case 'd': System.out.println("Answer : d \r\n" + //
				 "Explain:Linux is not an antivirus Software. It is an open source operating software. Rest all others are antivirus software for Microsoft Windows, macOS, Android and iOS");
		break;
		
		default:
			System.out.println("select only a,b,");
		
		}
		
		
		System.out.println("2.Which unit of the computer is considered as the brain of the computer ?\r\n"+//
				"a)memory unit\r\n"+//
				"b)input unit \r\n"+//
		        "c)CPU \r\n" + //
		         "d)out unit\n");
        
		char option1 = sc.next().charAt(0);
		switch(option1) {
		
		case 'a': System.out.println("Wrong Answer");
		break;
		case 'b': System.out.println("Wrong Answer");
		break;
		case 'c': System.out.println("Answer: c \r\n" + //
				 "Explain:Central Processing Unit (CPU) is considered as the brain of the computer because it contains all the circuitry needed to process input, store data and output results");
		break;
		case 'd': System.out.println("Wrong Answer");
		break;
		
		default:
			System.out.println("select only a,b,");
		
		}
		
		
		System.out.println("3.	__________ is the process of finding errors in software code ?\r\n" +//
				 "a)Hacking \r\n"+
				 "b)Compiling \r\n"+
				 "c)Testing \r\n"+
				"d)Debugging ");
		
		char option2 = sc.next().charAt(0);
		
		switch(option2) {
		
		case 'a': System.out.println("Wrong Answer");
		break;
		case 'b': System.out.println("Wrong Answer");
		break;
		case 'c': System.out.println("Wrong Answer");
		break;
		case 'd': System.out.println("Answer: 	\r\n"+//
				"Explanation:The process of finding errors in software code is known as debugging. Therefore, option (d) is the correct answer.");
		break;
		
		default:
			System.out.println("select only a,b,");
		
		}
		
	}

}
